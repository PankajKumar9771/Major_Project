<% layout("/layouts/boilerplate")%>

    <div id="filters">
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-fire"></i>
            </div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-city"></i>
            </div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-mountain"></i>
            </div>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-brands fa-fort-awesome"></i>
            </div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>Pools</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-cow"></i>
            </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-snowflake"></i>
            </div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-warehouse"></i>
            </div>
            <p>Tree-house</p>
        </div>

        <div class="filter">
            <div class="icon">
                <i class="fa-solid fa-golf-ball-tee"></i>
            </div>
            <p>Golfing</p>
        </div>

        <!-- //for taxes of the toggler -->
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch ">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes </label>
            </div>
        </div>

    </div>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">

        <% for(listing of allListing){%>
            <a href="/listings/<%=listing.id %>" class="listing-link">
                <div class="card listing-card col">
                    <img src="<%=listing.image.url %>" class="card-img-top" style="height: 20rem;"
                        alt="listings-images">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">

                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                                <span class="tax-info">&nbsp;
                                    &nbsp;&#8377;<%= (listing.price+(listing.price*0.18)).toLocaleString("en-IN") %>
                                        &nbsp; <i>+18%
                                            GST</i></span>
                        </p>


                    </div>
                </div>
            </a>
            <% } %>
    </div>





    